import asyncio
from telethon.sync import TelegramClient
from telethon import events

# Ваш API_ID и API_HASH
api_id = '22559443'
api_hash = '92b2a59c282c297048c582d5aabc5a6c'

# Учетные данные вашего аккаунта
phone_number = '+380 66 368 70 89'
username = 'lllzzzy'

# Авторизуем клиента
async def main():
    async with TelegramClient(username, api_id, api_hash) as client:
        await client.start()

        # Отправляем команду /menu боту
        await client.send_message('TRUE_SYNDICATE_ROBOT', '/menu')

        # Ожидаем ответ от бота
        @client.on(events.NewMessage(from_users='TRUE_SYNDICATE_ROBOT'))
        async def handle_message(event):
            if 'TRUE SYNDICATE' in event.raw_text:
                await event.click(1, 0)  # Нажимаем первую кнопку
        # Запускаем клиента и ожидаем событий
        await client.run_until_disconnected()

if __name__ == '__main__':
    asyncio.run(main())
